# Database dialect: sqlite, postgres, or mysql
DB_DIALECT=sqlite

# SQLite database file path (used if DB_DIALECT=sqlite)
DB_PATH=qdroid.db

# PostgreSQL DSN (used if DB_DIALECT=postgres)
POSTGRES_DSN=postgres://user:password@localhost:5432/qdroid

# MySQL DSN (used if DB_DIALECT=mysql)
MYSQL_DSN="user:password@tcp(localhost:3306)/qdroid?charset=utf8mb4&parseTime=True&loc=Local"

# Server port (default 8080)
PORT=8080

# Logging level: DEBUG, INFO, WARN, ERROR, OFF
LOG_LEVEL=INFO
